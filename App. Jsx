// ... (Imports: Router, Routes, Route, Navigate, useAuth, Home, Login, Signup) ...
import SellProduct from './components/pages/SellProduct'; // <--- NEW IMPORT
import AdminDashboard from './components/pages/AdminDashboard';
import SellerPanel from './components/pages/SellerPanel';

// ... (ProtectedRoute component remains the same) ...

function App() {
    const { currentView, loading } = useAuth();
    
    // ... (Loading state check remains the same) ...

    const getDashboardPath = () => {
        if (currentView === 'admin') return '/admin';
        if (currentView === 'seller') return '/seller';
        return '/'; 
    };

    return (
        <Router>
            {/* RoleSwitcher can be placed in a persistent header component */}
            
            <Routes>
                {/* PUBLIC ROUTES (Customer View) */}
                <Route path="/" element={<Home />} />
                <Route path="/login" element={<Login />} />
                <Route path="/signup" element={<Signup />} />
                
                {/* ðŸŽ¯ NEW PUBLIC ROUTE: Accessible to any logged-in user */}
                <Route path="/sell" element={<SellProduct />} /> 
                
                {/* DASHBOARD REDIRECT (Redirects logged-in users) */}
                <Route path="/dashboard" element={<Navigate to={getDashboardPath()} replace />} />


                {/* ADMIN-ONLY ROUTE */}
                <Route 
                    path="/admin" 
                    element={
                        <ProtectedRoute requiredRole="admin">
                            <AdminDashboard />
                        </ProtectedRoute>
                    } 
                />

                {/* SELLER-ONLY ROUTE (For managing approved products/orders) */}
                <Route 
                    path="/seller" 
                    element={
                        <ProtectedRoute requiredRole="seller">
                            <SellerPanel />
                        </ProtectedRoute>
                    } 
                />
                
                <Route path="*" element={<h1>404 Not Found</h1>} />
            </Routes>
        </Router>
    );
}

export default App;
